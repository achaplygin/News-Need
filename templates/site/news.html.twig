{% extends 'base.html.twig' %}

{% block title %}News Need{% endblock %}

{% block body %}
    <div class="wrapper">
        <div class="row">
            <div class="col-sm-12">
                <h1 class="d-inline-flex">News Need</h1>
                {% include('site/_form.html.twig') %}
            </div>
        </div>
        <div>
            {% for item in pagination %}
                {{ include('site/item.html.twig', {
                    title: item.title ?? '',
                    text: item.text ?? '',
                    link: item.link ?? '',
                    img: item.image ?? '',
                    date: item.date ?? ''
                }) }}
            {% endfor %}
        </div>
        <hr>
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
    </div>
{% endblock %}
