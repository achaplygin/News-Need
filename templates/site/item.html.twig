<div>
    <hr>
    <h3>{{ title|raw }}</h3>
    <div class="row">
        <div class="col-sm">
            <br>{{ text|raw }}
            {% if img %}
        </div>
        <div class="col-sm-4">
            <img width="100%" src="{{ img }}">
            {% endif %}
        </div>
        <div class="col-sm-12">
            <div class="d-inline-block">
                <hr>
                <i>{{ date|date }}</i>
            </div>
            <div class="d-inline-block float-right">
                <hr>
                <a class="btn btn-secondary" href="{{ link }}" target="_blank">
                    Source <i class="fa fa-external-link"></i>
                </a>
            </div>
        </div>
    </div>
</div>
